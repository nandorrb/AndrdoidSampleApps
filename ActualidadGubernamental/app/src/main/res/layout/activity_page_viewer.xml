<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_activity_page_viewer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawHorizontalTrack="true"
    tools:openDrawer="start">

    <LinearLayout
        android:id="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/image_button_activity_page_viewer_back"
            android:layout_width="@dimen/button_height_tall"
            android:layout_height="@dimen/button_height_tall"
            android:background="@color/colorPrimary"
            android:src="@drawable/ic_chevron_left_white_24dp" />


        <com.mancj.materialsearchbar.MaterialSearchBar
            android:id="@+id/activity_page_viewer_search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:backgroundTint="@color/colorPrimary"
            android:foregroundTint="@color/colorPrimary"
            app:mt_hint="@string/app_name"
            app:mt_maxSuggestionsCount="4"
            app:mt_speechMode="false" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@color/actualidad_gubernamental_custom_light_gray"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/image_button_activity_page_viewer_text_to_speech"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"

            android:src="@drawable/ic_record_voice_over_black_24dp" />

        <ImageView
            android:id="@+id/image_view_1_at_right_of_image_button_activity_page_viewer_text_to_speech"
            android:layout_width="@dimen/spacing_micro"
            android:layout_height="@dimen/button_height_short"
            android:layout_gravity="center"
            android:background="@color/gray" />

        <ImageButton
            android:id="@+id/image_button_activity_page_viewer_share"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"

            android:src="@drawable/ic_share_black_24dp" />


        <ImageView
            android:id="@+id/image_view_2_at_right_of_image_button_activity_page_viewer_share"
            android:layout_width="@dimen/spacing_very_huge"
            android:layout_height="match_parent"
            android:background="@null" />

        <ImageButton
            android:id="@+id/image_button_activity_page_viewer_download"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"

            android:src="@drawable/ic_instituto_pacifico_descargapdf_black_24dp" />

        <ImageView
            android:id="@+id/image_view_3_at_right_of_image_button_activity_page_viewer_download"
            android:layout_width="@dimen/spacing_micro"
            android:layout_height="@dimen/button_height_short"
            android:layout_gravity="center"
            android:background="@color/gray" />

        <ImageButton
            android:id="@+id/image_button_activity_page_viewer_star"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"

            android:src="@drawable/ic_instituto_pacifico_favoritoblank_black_24dp" />

        <ImageView
            android:id="@+id/image_view_4_at_right_of_image_button_activity_page_viewer_star"
            android:layout_width="@dimen/spacing_micro"
            android:layout_height="@dimen/button_height_short"
            android:layout_gravity="center"
            android:background="@color/gray" />

        <ImageButton
            android:id="@+id/image_button_activity_page_viewer_dark_toggle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_normal"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"

            android:src="@drawable/ic_instituto_pacifico_noche_black_24dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout_activity_page_viewer_markdown_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        >




        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">

            <LinearLayout
                android:id="@+id/scroll_view_activity_page_viewer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            </LinearLayout>
            <!--
            <us.feras.mdv.MarkdownView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/markdownView" />

             <Space
                  android:layout_marginTop="56dp"
                  android:layout_width="match_parent"
                  android:layout_height="56dp" />
                  -->

        </ScrollView>





    </LinearLayout>
    <ImageView
        android:id="@+id/image_view_activity_page_viewer_please_download_pdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_message_please_download_the_pdf"
        android:visibility="gone" />


</LinearLayout>
